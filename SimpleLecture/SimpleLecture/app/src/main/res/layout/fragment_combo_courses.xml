<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simplelecture.main.fragments.ComboCoursesFragment">


    <RelativeLayout
        android:id="@+id/headingRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_above="@+id/bottomRelativeLayout"
        android:background="@color/common_action_bar_splitter">

        <TextView
            android:id="@+id/textView_headerUpdateDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="left|center"
            android:text="New Text"
            android:textSize="10sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/headingRelativeLayout"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:scrollbars="vertical" />


